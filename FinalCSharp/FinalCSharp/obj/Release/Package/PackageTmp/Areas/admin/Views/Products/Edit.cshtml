@model FinalCSharp.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content_table mt-3" style="width:96%;margin-left:auto;margin-right:auto;border:1px solid #009cff">
    <div class=" pt-1 pb-1 mb-3" style="background-color:#009cff;padding-left:16px">
        <h2 style="color:#fff;margin-bottom:0">Chỉnh sửa tin tức</h2>
    </div>

    @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="d-flex justify-content-center">
                <h4>@Html.DisplayFor(model => model.name)</h4>

            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="row pt-3" style="margin-left:48px;">
                <div class="form-group col-lg-6 " style="padding-left:0;">
                    @Html.Label("Tên sản phẩm", htmlAttributes: new { @class = "control-label" })
                    <div style="width:90%">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-lg-6">
                    @Html.Label("Thời gian", htmlAttributes: new { @class = "control-label" })
                    <div style="width:90%">
                        @Html.EditorFor(model => model.duration, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.duration, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group pt-3" style="margin-left:48px;width:91.5%;">
                @Html.Label("Số lượng khách", htmlAttributes: new { @class = "control-label " })
                <div class="">
                    @Html.EditorFor(model => model.customer_amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.customer_amount, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group pt-3" style="margin-left:48px;width:91.5%;">
                @Html.Label("Nội dung", htmlAttributes: new { @class = "control-label" })
                <div class="">
                    @Html.TextAreaFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row pt-3" style="margin-left:48px;">
                <div class="form-group col-lg-6 " style="padding-left:0;">
                    @Html.Label("Đánh giá", htmlAttributes: new { @class = "control-label " })
                    <div style="width:90%">
                        @Html.EditorFor(model => model.review, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.review, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-lg-6">
                    @Html.Label("Giá sản phẩm", htmlAttributes: new { @class = "control-label" })
                    <div style="width:90%">
                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            
            <div class="form-group pt-3" style="margin-left: 48px; width: 91.5%;">
                @Html.Label("Hình đại diện", htmlAttributes: new { @class = "control-label " })
                <div class="d-flex justify-content-evenly"  >
                    <div class="w-100">
                        <input type="file" name="img" id="img" accept=".jpg,.png,.gif,.jpeg,.bmp" />
                    </div>
                    <div class="w-100">
                            <img src="~/Content/img/@Model.img_link" width="100%" /> 
                    </div>
                </div>
                    
            </div>
            <div class="form-group pt-3" style="margin-left:48px;width:91.5%;">
                    @Html.LabelFor(model => model.meta, htmlAttributes: new { @class = "control-label " })
                    <div>
                        @Html.EditorFor(model => model.meta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.meta, "", new { @class = "text-danger" })
                    </div>
            </div>


            <div class="row pt-3" style="margin-left:48px;">
                <div class="form-group col-lg-6 " style="padding-left:0;">
                    @Html.Label("Hiển thị", htmlAttributes: new { @class = "control-label " })
                    <div style="width:90%">
                        @Html.EditorFor(model => model.hide)
                        @Html.ValidationMessageFor(model => model.hide, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-lg-6">
                    @Html.Label("Địa điểm", htmlAttributes: new { @class = "control-label " })
                    <div style="width:90%">
                        @Html.EditorFor(model => model.position, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.position, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group pt-3" style="margin-left:48px;width:91.5%;">
                    @Html.Label("Khu vực", htmlAttributes: new { @class = "control-label " })
                    <div>
                        @Html.EditorFor(model => model.area, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.area, "", new { @class = "text-danger" })
                    </div>
             </div>

            <div class="form-group pt-3" style="margin-left:48px;width:91.5%;">
                    @Html.Label("Tên loại dịch vụ", htmlAttributes: new { @class = "control-label " })
                    <div>
                        @Html.DropDownList("category_id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
                    </div>
             </div>

            <div class="form-group pt-3 pb-3" style="margin-left:48px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    @Html.ActionLink("Quay về trang chủ", "Index",null,new {@class = "btn btn-danger"})
                </div>
            </div>

        </div>

            }

        </div>

@section _Footer
{
            <script src="~/Areas/admin/Content/ckfinder/ckfinder.js"></script>
            <script src="~/Areas/admin/Content/ckeditor/ckeditor.js"></script>
            <script type="text/javascript">
                var editor = CKEDITOR.replace("description");
                var editor = CKEDITOR.replace("description", { height: '600px' });
                customConfig: '/Areas/admin/Content/ckeditor/config.js';
            </script>
            <script>
                $(function () {
                    $("#name").keyup(function () {
                        var text = $.trim($(this).val().toLowerCase());
                        var text_create;
                        text_create = text.replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g, "a").replace(/\ /g, '-').replace(/đ/g, "d").replace(/đ/g, "d").replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y").replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g, "u").replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ.+/g, "o").replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ.+/g, "e").replace(/ì|í|ị|ỉ|ĩ/g, "i");
                        $('#meta').val(text_create);
                    }).keyup();
                });
            </script>
}
