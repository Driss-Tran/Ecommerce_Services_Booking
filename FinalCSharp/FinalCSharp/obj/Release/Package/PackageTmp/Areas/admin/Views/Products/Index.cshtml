@model IEnumerable<FinalCSharp.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}


<div class="content_table mt-3" style="width:96%;margin-left:auto;margin-right:auto;border:1px solid #009cff">
    <div class=" pt-1 pb-1 mb-3" style="background-color:#009cff;padding-left:16px">
        <h3 style="color:#fff;margin-bottom:0">Quản lý sản phẩm</h3>
    </div>

    <p style="text-align:right;margin-right:24px">
        @Html.ActionLink(HttpUtility.HtmlDecode("Tạo mới &#43;"), "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered" style="width:96%;margin-left:auto;margin-right:auto;">
        <tr style="font-weight:700">
            <th>
                Tên tour
            </th>
            <th>
                Giá
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Hiển thị
            </th>
            <th>
                Địa điểm
            </th>
            <th>
                Khu vực
            </th>
            <th>Thao tác</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    <img src="~/Content/img/@item.img_link" width=100/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.area)
                </td>
                <td>
                    @Html.ActionLink(HttpUtility.HtmlDecode("&#9998;"), "Edit", new { @id = item.id }, new { @class = "btn btn-primary handle_btn" })
                    @Html.ActionLink(HttpUtility.HtmlDecode("&#128465;"), "Delete", new { @id = item.id }, new { @class = "btn btn-danger handle_btn" })
                </td>
            </tr>
        }

    </table>
</div>