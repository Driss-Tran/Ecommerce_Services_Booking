@model FinalCSharp.Models.User


@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Main css -->
@section _Header{
    <link rel="stylesheet" href="~/Content/css/login.css">
    <link rel="stylesheet" href="~/Content/fonts/material-icon/css/material-design-iconic-font.min.css">
}

@{
    if (Session["email"] != null)
    {
        Response.Redirect("/");
    }
}
<!-- Sign up form -->
@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="signup">
        <div class="form_container container">
            <div class="signup-content">

                <div class="signup-form">

                    <h2 class="form-title">Đăng ký</h2>
                    <div class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>

                            @Html.TextBoxFor(model => model.fullName, new { id = "name", name = "name", placeholder = "Tên của bạn" })
                            @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            @Html.TextBoxFor(model => model.email, new { id = "email", name = "email", placeholder = "Email của bạn", type = "email" })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                        @if (ViewBag.error != null)
                        {
                            <p class="text-danger mt-2">@ViewBag.error</p>
                        }
                        <div class="form-group">
                            <label for="phone"><i class="zmdi zmdi-phone"></i></label>
                            @Html.TextBoxFor(model => model.phone, new { id = "phone", name = "phone", placeholder = "Số điện thoại của bạn" })
                            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="address"><i class="zmdi zmdi-my-location"></i></label>
                            @Html.TextBoxFor(model => model.address, new { id = "address", name = "address", placeholder = "Địa chỉ của bạn" })
                            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.PasswordFor(model => model.password, new { id = "pass", name = "pass", placeholder = "Mật khẩu của bạn" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                            @Html.PasswordFor(model => model.confirmpassword, new { id = "re_pass", name = "re_pass", placeholder = "Xác nhận lại mật khẩu" })
                            @Html.ValidationMessageFor(model => model.confirmpassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                            <label for="agree-term" class="label-agree-term"><span><span></span></span>Tôi đồng ý với tất cả điều khoản ở  <a href="#" style="font-size:14px">Chính sách dịch vụ</a></label>
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                        </div>
                        <div class="form-group text-right">
                            <p style="font-size:16px">Đã có tài khoản ? <a href="@Url.Action("Index","Login")">Đăng nhập ngay</a></p>
                        </div>


                    </div>
                </div>
                <div class="signup-image">
                    <figure><img src="~/Content/img/signup-image.jpg" alt="sing up image"></figure>

                </div>


            </div>
        </div>
    </section>
}


