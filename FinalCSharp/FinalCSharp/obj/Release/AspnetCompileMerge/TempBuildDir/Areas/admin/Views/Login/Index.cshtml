@model FinalCSharp.Areas.admin.Data.AdminInfo
@{
    Layout = null;


}

@{
    if (Session["admin"] != null)
    {
        Response.Redirect("/admin");
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Trang quản trị</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/Areas/admin/Content/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/Areas/admin/Content/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/Areas/admin/Content/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/Areas/admin/Content/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/Areas/admin/Content/css/style.css" rel="stylesheet">
    <link href="/Areas/admin/Content/css/login.css" rel="stylesheet">
</head>
<body class="img js-fullheight" style="background-image: url('/Areas/admin/Content/img/bg.jpg'); ">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <h3 class="mb-4 text-center">Đăng nhập Admin</h3>
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.username, new { id = "username", name = "username", placeholder = "Tên đăng nhập", type = "text",required = "required", @class="form-control" })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.password, new { id = "pass", name = "pass", placeholder = "Mật khẩu của bạn",@class="form-control", required = "required" })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Đăng nhập</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    <script src="~/Areas/admin/Content/js/bootstrap.min.js"></script>
    <script src="~/Areas/admin/Content/js/jquery.min.js"></script>
    <script src="~/Areas/admin/Content/js/main.js"></script>
    <script src="~/Areas/admin/Content/js/popper.js"></script>

</body>
</html>
