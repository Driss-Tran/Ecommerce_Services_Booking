@model IEnumerable<FinalCSharp.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content_table mt-3" style="width:96%;margin-left:auto;margin-right:auto;border:1px solid #009cff">
    <div class=" pt-1 pb-1 mb-3" style="background-color:#009cff;padding-left:16px">
        <h3 style="color:#fff;margin-bottom:0">Quản lý người dùng</h3>
    </div>
    <table class="table table-striped table-bordered" style="width:96%;margin-left:auto;margin-right:auto;">
        <tr style="font-weight:700">
            <th>
                Tên người dùng
            </th>
            <th>
                Email
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Xác nhận mật khẩu
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Thao tác
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.confirmpassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.ActionLink(HttpUtility.HtmlDecode("🔍"), "Details", new { @id = item.id }, new { @class = "btn btn-primary handle_btn" })
                    @Html.ActionLink(HttpUtility.HtmlDecode("&#128465;"), "Delete", new { @id = item.id }, new { @class = "btn btn-danger handle_btn" })

                </td>
            </tr>
        }

    </table>
</div>