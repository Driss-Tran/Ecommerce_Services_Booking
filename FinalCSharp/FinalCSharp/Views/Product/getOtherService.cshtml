
@model List<List<FinalCSharp.Models.Product>>

@{ int count = 0;}
@foreach (var slider in Model)
{
    String activeClass = "";
    if (count == 0)
    {
        activeClass = "active";
    }
    <div class= "carousel-item @activeClass" >
        <div class="row">
            @foreach (var content in slider)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="package-item bg-white mb-2">
                        <img class="img-fluid" src="/Content/img/@content.img_link" alt="">
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"><i class="fa fa-map-marker-alt text-primary mr-2"></i>@content.position</small>
                                <small class="m-0"><i class="fa fa-calendar-alt text-primary mr-2"></i>@content.duration </small>
                                <small class="m-0"><i class="fa fa-user text-primary mr-2"></i>@content.customer_amount Person</small>
                            </div>
                            <a class="tour-desc h5 text-decoration-none" href="@content.meta">@content.name</a>
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex justify-content-between">
                                    <h6 class="m-0"><i class="fa fa-star text-primary mr-2"></i>@content.review</h6>
                                    <h5 class="m-0">$@content.price</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            }
            @{count++;}
        </div>
    </div>
}


