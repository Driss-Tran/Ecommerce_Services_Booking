@model IEnumerable<FinalCSharp.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="content_table mt-3" style="width:96%;margin-left:auto;margin-right:auto;border:1px solid #009cff">
    <div class=" pt-1 pb-1 mb-3" style="background-color:#009cff;padding-left:16px">
        <h3 style="color:#fff;margin-bottom:0">Quản lý Menu</h3>
    </div>

    <p style="text-align:right;margin-right:24px">
        @Html.ActionLink(HttpUtility.HtmlDecode("Tạo mới &#43;"), "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered" style="width:96%;margin-left:auto;margin-right:auto;">
        <tr style="font-weight:700">
            <th>
                Tên
            </th>
            <th>
                Liên kết
            </th>
            <th>
                Meta
            </th>
            <th>
                Hiện
            </th>

            <th>
                Sắp xếp
            </th>

            <th>
                Thao tác
                </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.meta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order)
                </td>

                <td>


                    @Html.ActionLink(HttpUtility.HtmlDecode("&#128394;&#65039;"), "Edit", new { @id = item.id }, new { @class = "btn btn-primary handle_btn", @style = "background-color:#fff;border:1px solid #ccc;" })    
                    @Html.ActionLink(HttpUtility.HtmlDecode("&#128465;"), "Delete", new { @id = item.id }, new { @class = "btn btn-danger handle_btn", })



                </td>
            </tr>
        }

    </table>
</div>



